{
  "name": "medical-data-collector",
  "version": "0.1.0",
  "authors": [
    "Factory Box"
  ],
  "private": true,
  "main": "electron-dist/main.js",
  "build": {
    "appId": "com.medicaldatacollector.app",
    "productName": "Medical Data Collector",
    "copyright": "Copyright Â© 2026 Factory Box",
    "files": [
      "electron-dist/**/*",
      "!electron-dist/renderer"
    ],
    "extraResources": [
      {
        "from": "electron-dist/renderer",
        "to": "renderer"
      },
      {
        "from": "build/favicon.ico",
        "to": "favicon.ico"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh",
      "warningsAsErrors": false,
      "perMachine": true,
      "runAfterFinish": true,
      "menuCategory": false,
      "shortcutName": "Medical Data Collector",
      "uninstallDisplayName": "Medical Data Collector",
      "installerIcon": "build/favicon.ico",
      "uninstallerIcon": "build/favicon.ico"
    }
  },
  "scripts": {
    "dev": "concurrently \"next dev -p 3005\" \"tsc -w -p tsconfig.electron.json\" \"npm run start:electron-wait\"",
    "start:electron-wait": "wait-on http://localhost:3005 && electron .",
    "build": "next build && tsc -p tsconfig.electron.json",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder -mwl",
    "rebuild": "npx electron-rebuild -f -w better-sqlite3",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-select": "^2.2.6",
    "@serialport/parser-readline": "^13.0.0",
    "aedes": "^0.51.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-store": "^11.0.2",
    "lucide-react": "^0.563.0",
    "mime-types": "^3.0.2",
    "mqtt": "^5.14.1",
    "mysql2": "^3.16.2",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "serialport": "^13.0.0",
    "tailwind-merge": "^3.4.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "postcss": "^8.5.6",
    "shadcn": "^3.8.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.4"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.6.2"
  }
}
